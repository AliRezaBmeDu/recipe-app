<% content_for :head do %>
  <%= stylesheet_link_tag 'recipe_index' %>
<% end %>

<%= render 'shared/navbar' %>
<h1>Public Recipes: </h1>
<% @recipe_public.each do |recipe| %>
  <div class="recipe-profile">
    <ul>
        <li>
            <h2><%= recipe.name %></h2>
            <p>Recipe by: <%= recipe.user.name %></p>
        </li>
    </ul>
  </div>
<% end %>
