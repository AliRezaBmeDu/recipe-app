<h1>Create new recipe</h1>

<%= form_with(model: [@user, @recipe], url: user_recipes_path(@user)) do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :preparation_time %>
    <%= form.number_field :preparation_time, step: 0.1 %>
  </div>

  <div class="field">
    <%= form.label :cooking_time %>
    <%= form.number_field :cooking_time, step: 0.1 %>
  </div>

  <div class="field">
    <%= form.label :public %>
    <%= form.check_box :public %>
  </div>

  <div class="actions">
    <%= form.submit "Create Recipe" %>
  </div>
<% end %>

<%= link_to 'Back to Homepage', authenticated_root_path %>
