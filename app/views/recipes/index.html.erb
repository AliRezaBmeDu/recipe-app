<% content_for :head do %>
  <%= stylesheet_link_tag 'recipe_index' %>
<% end %>

<%= render 'shared/navbar' %>
<div class="container mt-4">
  <h1 class="title d-flex justify-content-center">List of Recipes: </h1>
  <% @recipes.each do |recipe| %>
    <div class="d-flex justify-content-between mt-4 p-4 border rounded">
        <div>
          <h2><%= link_to recipe.name, recipe_specific_path(recipe), class: "text-decoration-none" %></h2>
          <% if recipe.user == current_user %>
            <%= button_to 'Remove', delete_recipe_path(current_user, recipe), method: :delete, data: { confirm: 'Are you sure you want to delete this recipe?' }, class: 'btn btn-danger mt-2' %>
          <% end %>
        </div>

        <div>
          <p><%= recipe.description %></p>
        </div>
    </div>
  <% end %>

  <div class="d-flex justify-content-center mt-4">
    <%= link_to 'Add New Recipe', new_user_recipe_path(current_user), class: 'btn btn-success' %>
  </div>

</div>
